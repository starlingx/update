<contents>
% if not contents is UNDEFINED and len(contents) > 0:
% for release_id in sorted(contents.keys()):
    <release id=${release_id}>
        % for pkg in sorted(contents[release_id]):
        <pkg>${pkg}</pkg>
        % endfor
    </release>
% endfor
% endif
</contents>
<error>
% if not error is UNDEFINED and len(error) > 0:
${error}
% endif
</error>
<metadata>
% if not metadata is UNDEFINED and len(metadata) > 0:
    % for release_id in sorted(metadata.keys()):
${showpatch(release_id)}
    % endfor
% endif
</metadata>
<%def name="showpatch(release_id)">\
<% r = metadata[release_id] %>\
    <release>
        <release_id>
            ${release_id}
        </release_id>
        <status>
        % if r["status"] != "":
            ${r["status"]}
        % endif
        </status>
        <unremovable>
        % if r["unremovable"] != "":
            ${r["unremovable"]}
        % endif
        </unremovable>
        <reboot_required>
        % if r["reboot_required"] != "":
            ${r["reboot_required"]}
        % endif
        </reboot_required>
        <sw_version>
        % if r["sw_version"] != "":
            ${r["sw_version"]}
        % endif
        </sw_version>
        <deploy_state>
        % if r["deploy_state"] != "":
            ${r["deploy_state"]}
        % endif
        </deploy_state>
        <state>
        % if r["state"] != "":
            ${r["state"]}
        % endif
        </state>
        <status>
        % if r["status"] != "":
            ${r["status"]}
        % endif
        </status>
        <summary>
        % if r["summary"] != "":
            ${r["summary"]}
        % endif
        </summary>
        <description>
        % if r["description"] != "":
            ${r["description"]}
        % endif
        </description>
        <install_instructions>
        % if r["install_instructions"] != "":
            ${r["install_instructions"]}
        % endif
        </install_instructions>
        <warnings>
        % if r["warnings"] != "":
            ${r["warnings"]}
        % endif
        </warnings>
        <requires>
        % if "requires" in r and len(r["requires"]) > 0:
            % for req in sorted(r["requires"]):
                <release>${req}</release>
            % endfor
        % endif
        </requires>
    </release></%def>
